{
  "name": "rachelle",
  "version": "0.4.6",
  "description": "Fast, and lightweight TypeScript boilerplate that export a single file. Tests in Mocha, Chai & Sinon. TSLint for better code quality.",
  "main": "dist/rachelle.js",
  "author": "KFlash",
  "license": "MIT",
  "engines": {
    "node": ">= 5.4.1 < 6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kflash/rachelle.git"
  },
  "bugs": {
    "url": "https://github.com/kflash/rachelle/issues"
  },
  "keywords": [
    "typescript",
    "microsoft",
    "ios",
    "mocha",
    "boilerplate",
    "rollup",
    "istanbul",
    "coveralls",
    "isomorphic",
    "github",
    "bundle",
    "script",
    "sourcemap",
    "workflow",
    "chai",
    "sinon",
    "es2015",
    "transpilation",
    "mocha",
    "chai",
    "boilerplate"
  ],
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "prebuild": "./node_modules/.bin/tsc --outDir ./build -t es5 -m es6 --skipLibCheck -p ./tsconfig.json",
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "./node_modules/.bin/rollup --environment NODE_ENV:development -c",
    "build:prod": "./node_modules/.bin/rollup --environment NODE_ENV:production -c",
    "coverage": "npm run pretest && node --harmony ./node_modules/istanbul/lib/cli.js cover --root ./build/src --report lcov --report text ./node_modules/mocha/bin/_mocha ./build/test/**/*.js",
    "cleanup": "rm -rf ./dist/ ./build/ ./coverage/",
    "pretest": "./node_modules/.bin/tsc --sourceMap --outDir ./build --skipLibCheck -t es6 -m none -p ./tsconfig.json",
    "test": "npm run lint:tests && ./node_modules/.bin/mocha test/specs/**/*.ts",
    "test:jsd": "npm run lint:tests && ./node_modules/.bin/mocha test/specs/**/*.ts --require test/setup/setup-dom.js",
    "lint": "npm run lint:tests && npm run lint:src",
    "lint:tests": "./node_modules/.bin/tslint -c ./tslint.json src/**/*.ts src/**/*.tsx",
    "lint:src": "./node_modules/.bin/tslint -c ./tslint.json test/specs/**/*.ts test/specs/**/*.tsx",
    "update:dependencies": "./node_modules/.bin/ncu -u",
    "watch:tests": "./node_modules/.bin/mocha test/specs/**/*.ts -R spec --bail --watch",
    "watch:build": "./node_modules/.bin/tsc --skipLibCheck --outDir ./build  -p . -w"
  },
  "devDependencies": {
    "@types/chai": "^3.4.22-alpha",
    "@types/mocha": "^2.2.21-alpha",
    "@types/sinon": "^1.16.20-alpha",
    "@types/sinon-chai": "^2.7.20-alpha",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "coveralls": "^2.11.9",
    "ignore-styles": "^4.0.0",
    "jsdom": "^9.3.0",
    "mocha": "^2.5.3",
    "npm-check-updates": "2.6.8",
    "istanbul": "github:gotwarlost/istanbul#v1",
    "rollup": "0.33.0",
    "rollup-plugin-commonjs": "3.1.0",
    "rollup-plugin-buble": "0.12.1",
    "rollup-plugin-uglify": "1.0.1",
    "rollup-plugin-replace": "1.1.1",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0",
    "tslint": "3.13.0",
    "ts-node": "^0.9.3",
    "typescript": "next"
  },
  "dependencies": {
    "@types/node": "^4.0.22-alpha"
  },
  "npmName": "rachelle",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ]
}
